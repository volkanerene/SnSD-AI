# =============================================================================
# ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env.local and fill in your values for local development
# DO NOT commit .env.local to version control

# -----------------------------------------------------------------------------
# Application Environment
# -----------------------------------------------------------------------------
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://snsdconsultant.com

# -----------------------------------------------------------------------------
# Backend API Configuration
# -----------------------------------------------------------------------------
# Local: http://localhost:8000
# Dev: http://localhost:8000
# Prod: https://api.snsdconsultant.com
NEXT_PUBLIC_API_URL=https://api.snsdconsultant.com
NEXT_PUBLIC_API_VERSION=v1

# -----------------------------------------------------------------------------
# Supabase Configuration
# -----------------------------------------------------------------------------
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://ojkqgvkzumbnmasmajkw.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# IMPORTANT: Service role key should NEVER be exposed to the client
# Only use this in API routes or server-side code
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# JWT Secret for token verification
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

NEXT_PUBLIC_SUPABASE_JWKS_URL=https://ojkqgvkzumbnmasmajkw.supabase.co/auth/v1/jwks

# -----------------------------------------------------------------------------
# Authentication Configuration
# -----------------------------------------------------------------------------
NEXTAUTH_URL=https://snsdconsultant.com
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-nextauth-secret

NEXT_PUBLIC_SESSION_TIMEOUT=3600
NEXT_PUBLIC_REFRESH_TOKEN_BEFORE_EXPIRY=300

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
NEXT_PUBLIC_ENABLE_EVREN_GPT=true
NEXT_PUBLIC_ENABLE_MARCEL_GPT=true
NEXT_PUBLIC_MARCEL_CUSTOM_GROUP_ID=
NEXT_PUBLIC_ENABLE_SAFETY_BUD=true

# -----------------------------------------------------------------------------
# Sentry Configuration (Error Tracking)
# -----------------------------------------------------------------------------
# Set to true to disable Sentry
NEXT_PUBLIC_SENTRY_DISABLED=true
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_ORG=
NEXT_PUBLIC_SENTRY_PROJECT=
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
SENTRY_AUTH_TOKEN=

# -----------------------------------------------------------------------------
# Analytics & Monitoring
# -----------------------------------------------------------------------------
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_GA_ID=

# -----------------------------------------------------------------------------
# Upload & Storage Configuration
# -----------------------------------------------------------------------------
# Max file size in bytes (default: 10MB)
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg,jpeg
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=snsd-documents

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_RATE_LIMIT=100
NEXT_PUBLIC_API_RATE_LIMIT_WINDOW=60000

# -----------------------------------------------------------------------------
# Localization
# -----------------------------------------------------------------------------
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,tr
NEXT_PUBLIC_DEFAULT_TIMEZONE=Asia/Dubai

# -----------------------------------------------------------------------------
# Debug & Development
# -----------------------------------------------------------------------------
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Performance & Optimization
# -----------------------------------------------------------------------------
NEXT_PUBLIC_ENABLE_COMPRESSION=true
NEXT_PUBLIC_ENABLE_CACHE=true
